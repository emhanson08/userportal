<div>
	<%= link_to patients_path, class: 'go-back-btn' do %>
		<i class="fas fa-arrow-circle-left"></i>
		<span>Go Back</span>
	<% end %>
</div>

<h1 class='search-results-header'>Search Results</h1>


<table class='search-results-table'>
	<tbody class='table-headers-rows-data'>
		<tr class="search-row">
			<th>Name</th>
			<th>Address</th>
			<th>Email</th>
			<th>Diagnosis</th>
			<th>Referral Channel</th>
			<th>Primary Clinician</th>
		</tr>

		<% @patients.each do |patient| %>
			<tr class="search-row">
				<td>
					<%= patient.last_name %>, <%= patient.first_name %>
				</td>
				<td>
					<%= patient.address %>
				</td>
				<td>
					<%= patient.email %>
				</td>
				<td>
					<%= patient.diagnosis %>
				</td>
				<td>
					<%= patient.referral_channel %>
				</td>
				<td>
					<%= patient.primary_clinician %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>